@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-9">
        <div class="product-info">
            <img src="~/img/SK-A-3262.jpg" alt="Alternate Text" style="width:500px;height:640px;"/>
            <h3>Woman Dress</h3>
            <ul class="product-props">
                <li>Price: $25.99</li>
                <li>Name: 2022 new arrivals dress-shirts woman</li>
                <li>Description: 2021 New Arrivals Dress Shirts Woman Summer Tops Fashionable Long Sleeve T-shirt Dress</li>
                <li>Category: Women's Blouses & Shirts</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy</button>

        </div>
        <div id="theForm">
            <form>
                <label>Your Name: </label>
                <br />
                <input />
                <br />
                <label>Email: </label>
                <br />
                <input type="text" />
                <br />
                <label>Subject: </label>
                <br />
                <input type="text" />
                <br />
                <label>Message: </label>
                <br />
                <textarea rows="4"></textarea>
                <br />
                <input type="submit" value="Send Message" />
            </form>
        </div>

        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox" />
                    <label>Remember Me?</label>
                </div>
                <div>
                    <input type="submit" value="Login" />
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-6">
        <p>This is a fun site to do some buying of women products.</p>
    </div>
</div>