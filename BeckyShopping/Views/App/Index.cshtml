@{
    ViewBag.Title = "Home Page";
}

<div class="product-info">
    <img src="~/img/2021-new-arrivals-dress-shirts-woman-sum_main-2.jpg" alt="Alternate Text" />
    <h3>Woman Dress</h3>
    <ul class="product-props">
        <li>Price: $25.99</li>
        <li>Name: 2022 new arrivals dress-shirts woman</li>
        <li>Description: 2021 New Arrivals Dress Shirts Woman Summer Tops Fashionable Long Sleeve T-shirt Dress</li>
        <li>Category: Women's Blouses & Shirts</li>
    </ul>
    <button id="buyButton">Buy</button>

</div>
<div id="theForm">
    <form action="/" method="post">
        <label>Your Name: </label>
        <br />
        <input />
        <br />
        <label>Email: </label>
        <br />
        <input type="text" />
        <br />
        <label>Subject: </label>
        <br />
        <input type="text" />
        <br />
        <label>Message: </label>
        <br />
        <textarea rows="4"></textarea>
        <br />
